<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:scrollbars="none">

        </ListView>

        <TextView
            android:id="@+id/letter"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/city_center_bg"
            android:gravity="center"
            android:textSize="20sp"
            android:visibility="gone"/>

        <com.idreamsky.dreamroom.ui.custum.LetterView
            android:id="@+id/letter_group"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="right|center"
            android:layout_marginBottom="@dimen/dr_space_eight"
            android:layout_marginTop="@dimen/dr_space_eight"
            android:background="@drawable/letter_vew_bg"/>

    </FrameLayout>

</RelativeLayout>
