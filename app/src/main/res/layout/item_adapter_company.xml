<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/dr_space_two_zero_zero"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/id_item_company_img"
        android:layout_width="0dp"
        android:layout_height="@dimen/dr_space_one_five_zero"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dr_space_six"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.idreamsky.dreamroom.ui.custum.RoundedImageView
            android:id="@+id/id_item_company_logo"
            android:layout_width="@dimen/dr_space_four_zero"
            android:layout_height="@dimen/dr_space_four_zero"
            android:layout_marginTop="@dimen/dr_space_one_eight"/>

        <TextView
            android:id="@+id/id_item_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dr_space_eight"
            android:textSize="@dimen/dr_text_one_six"/>

        <TextView
            android:id="@+id/id_item_company_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dr_space_eight"
            android:textSize="@dimen/dr_text_one_four"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dr_space_six"
            android:text="承接价格: 面议 ·"
            android:textColor="@color/refresh_second_color"
            android:textSize="@dimen/dr_text_one_four"/>

    </LinearLayout>

</LinearLayout>