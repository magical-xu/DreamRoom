<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <com.idreamsky.dreamroom.ui.custum.GestureViewPager
        android:id="@+id/item_recommend_vp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dr_space_two_five_zero">

    </com.idreamsky.dreamroom.ui.custum.GestureViewPager>

    <!--<com.idreamsky.dreamroom.ui.custum.MyHorizontalScrollView-->
    <!--android:id="@+id/item_recommend_hl"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="@dimen/dr_space_two_five_zero"-->
