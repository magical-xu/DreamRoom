<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/letter_view_bg"
              android:orientation="vertical">

    <include layout="@layout/common_title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dr_space_eight"
        android:layout_marginTop="@dimen/dr_space_ten"
        android:background="@drawable/city_center_bg"
        android:gravity="center"
        android:onClick="clearCache"
        android:padding="@dimen/dr_space_one_six"
        android:text="清除缓存"
        android:textSize="@dimen/dr_text_one_eight"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dr_space_eight"
        android:layout_marginTop="@dimen/dr_space_eight"
        android:text="意见反馈"
        android:textColor="@color/main_red"
        android:textSize="@dimen/dr_text_one_six"/>

    <EditText
        android:id="@+id/id_setting_et"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dr_space_two_zero_zero"
        android:layout_marginLeft="@dimen/dr_space_eight"
        android:layout_marginRight="@dimen/dr_space_eight"
        android:layout_marginTop="@dimen/dr_space_ten"
        android:background="@color/main_white"
        android:gravity="top|left"
        android:padding="@dimen/dr_space_eight"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dr_space_eight"
        android:layout_marginRight="@dimen/dr_space_eight"
        android:layout_marginTop="@dimen/dr_space_ten"
        android:background="@drawable/common_btn_bg"
        android:gravity="center"
        android:onClick="submit"
        android:padding="@dimen/dr_space_ten"
        android:text="提交"
        android:textColor="@color/main_white"
        android:textSize="@dimen/dr_text_one_eight"/>

</LinearLayout>