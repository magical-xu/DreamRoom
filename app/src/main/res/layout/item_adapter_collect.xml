<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/dr_space_ten"
                android:paddingTop="@dimen/dr_space_ten">

    <TextView
        android:id="@+id/id_item_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dr_space_one_four"
        android:gravity="center"
        android:textColor="@color/main_white"
        android:textSize="@dimen/dr_text_two_two"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dr_space_ten"
        android:src="@drawable/right_arrow"/>


</RelativeLayout>