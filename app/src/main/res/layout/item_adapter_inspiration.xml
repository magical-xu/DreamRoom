<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/id_item_iv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dr_space_two_zero_zero"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dr_space_four_zero"
        android:layout_alignBottom="@id/id_item_iv"
        android:background="@drawable/bottom_ll_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:paddingLeft="@dimen/dr_space_ten"
            android:textColor="@color/main_white"
            android:textSize="@dimen/dr_text_one_six"/>

        <TextView
            android:id="@+id/id_item_eye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dr_space_ten"
            android:drawableLeft="@drawable/ins_eye"
            android:drawablePadding="@dimen/dr_space_eight"
            android:gravity="center_vertical"
            android:text="696"
            android:textColor="@color/main_white"
            android:textSize="@dimen/dr_text_one_six"/>

        <TextView
            android:id="@+id/id_item_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dr_space_one_four"
            android:layout_marginRight="@dimen/dr_space_ten"
            android:drawableLeft="@drawable/ins_heart"
            android:drawablePadding="@dimen/dr_space_eight"
            android:gravity="center_vertical"
            android:text="11"
            android:textColor="@color/main_white"
            android:textSize="@dimen/dr_text_one_six"/>

    </LinearLayout>

    <TextView
        android:id="@+id/id_item_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_item_iv"
        android:layout_marginBottom="@dimen/dr_space_ten"
        android:layout_marginTop="@dimen/dr_space_ten"
        android:lineSpacingExtra="@dimen/dr_space_two"
        android:maxLines="2"
        android:paddingLeft="@dimen/dr_space_ten"
        android:paddingRight="@dimen/dr_space_ten"
        android:textSize="@dimen/dr_text_one_four"/>

</RelativeLayout>